@model IEnumerable<Role>

@{
    ViewData["Title"] = "Roles";
}

<h2>Roles</h2>

<p>
    @await Html.PartialAsync("_CreateBtnPartial", "Role")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Controls</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @await Html.PartialAsync("_ModelControlBtnPartial", new string[] { "Role",@item.Id})
            </td>
        </tr>
}
    </tbody>
</table>